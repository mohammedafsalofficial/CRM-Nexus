generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id            Int       @id @default(autoincrement())
  email         String    @unique @db.VarChar(100)
  password_hash String
  role          Role      @default(USER)
  permissions   Json?
  isVerified    Boolean   @default(false)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  otp           String?
  otpExpires    DateTime?
}

enum Role {
  SUPER_ADMIN
  ADMIN
  SALES_MANAGER
  SALES_REPRESENTATIVE
  ACCOUNT_MANAGER
  SUPPORT_MANAGER
  SUPPORT_AGENT
  MARKETING_MANAGER
  CONTENT_MARKETER
  FINANCE_MANAGER
  BILLING_SPECIALIST
  CUSTOMER
  VENDOR
  USER
}
